---
const GA_ID = import.meta.env.PUBLIC_GA_ID;
---

{
  GA_ID && (
    <>
      <script
        defer
        src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}
      />
      <script
        set:html={`
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', '${GA_ID}', {
            page_path: window.location.pathname,
          });`}
      />
    </>
  )
}
