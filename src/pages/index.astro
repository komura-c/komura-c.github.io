---
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import ProfileSection from "../components/ProfileSection.astro";
import TopHeader from "../components/TopHeader.astro";
import ScrollGuide from "../components/ScrollGuide.astro";
import ProductsSection from "../components/ProductsSection.astro";
import PostsSection from "../components/PostsSection.astro";
import MusicsSection from "../components/MusicsSection.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <ProfileSection />
  <TopHeader />
  <ScrollGuide />
  <ProductsSection />
  <PostsSection />
  <MusicsSection />
  <Footer />
</Layout>

<style lang="scss">
  :root {
    background-color: #f4f4f7;
  }
</style>
